#!/usr/bin/env bash
# A Bash script that prints a message indefinitely and reacts to SIGTERM

# trap 'echo "I am invincible!!!"' SIGTERM
# Trap SIGTERM and exit cleanly with the expected output
trap 'echo OK; 
exit 0' SIGTERM

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
