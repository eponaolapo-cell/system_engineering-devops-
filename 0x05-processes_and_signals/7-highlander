#!/usr/bin/env bash
# Script that displays "To infinity and beyond" indefinitely
# When receiving SIGTERM, displays "I am invincible!!!" and continues

# Define the signal handler function
sigterm_handler() {
    echo "I am invincible!!!"
}

# Trap SIGTERM signal and call the handler function
trap sigterm_handler SIGTERM

# Infinite loop
while true
do
    echo "To infinity and beyond"
    sleep 2
done
